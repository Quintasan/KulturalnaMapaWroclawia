<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.michalzajac.kulturalnamapawrocawia">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MapsActivity" />
        <activity
            android:name=".activities.WroclawActivity"
            android:label="@string/about_wroclaw"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.michalzajac.kulturalnamapawrocawia.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.POIDetailsActvity"
            android:label="@string/title_activity_poi_details"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.michalzajac.kulturalnamapawrocawia.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.EventDetailsActvity"
            android:label="@string/title_activity_event_details"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.michalzajac.kulturalnamapawrocawia.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.RouteDetailsActvity"
            android:label="@string/title_activity_route_details"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.michalzajac.kulturalnamapawrocawia.activities.MainActivity" />
        </activity>
    </application>

</manifest>
